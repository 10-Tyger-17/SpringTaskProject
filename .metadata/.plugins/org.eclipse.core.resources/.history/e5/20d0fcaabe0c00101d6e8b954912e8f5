package com.projectPackage.springTaskProject;

import java.time.LocalDate;
import java.time.format.DateTimeParseException;
import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class TaskController {
    @Autowired
    TaskRepository taskRespository;
    
    @GetMapping("/tasks")
    public List<Task> index(){
        return taskRespository.findAll();
    }
    
    @PostMapping("/tasks")
    public Task create(@RequestBody String name, String description, String due_dateIntro, String priorityIntro){
    	try {
			LocalDate due_date=LocalDate.parse(priorityIntro);
			try {
	    		Priority priority=Priority.valueOf(priorityIntro.toUpperCase());
	    		return taskRespository.save(new Task(name, description, due_date, priority));
	    	}catch(IllegalArgumentException e) {
	    		return null;
	    	}
		} catch (DateTimeParseException e) {
			return null;
		}
    }
}